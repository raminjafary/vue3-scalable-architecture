{
	"name": "vue3-scalable-architecture",
	"version": "1.0.0",
	"author": "raminjafary",
	"description": "vue3 scalable and modular architecture",
	"license": "MIT",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"dev": "vite",
		"build": "NODE_ENV=production vue-tsc --noEmit && vite build",
		"serve": "vite preview",
		"lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
		"lint:fix": "yarn lint --fix",
		"format:check": "prettier --ignore-path .gitignore .",
		"format:fix": "prettier  --ignore-path .gitignore -u --write .",
		"lint:markup": "vue-tsc --noEmit",
		"lint:style": "stylelint --ignore-path .gitignore '**/*.{scss,css,vue}'",
		"lint:style:fix": "yarn lint:style --fix",
		"generate:changelog": "standard-version --skip.commit --skip.tag",
		"release": "standard-version && git push origin master --follow-tags",
		"merge": "node scripts/create-merge-request.js"
	},
	"dependencies": {
		"axios": "^0.24.0",
		"vue": "^3.2.26",
		"vue-router": "^4.0.11",
		"vuex": "^4.0.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.0.0",
		"@commitlint/config-conventional": "^16.0.0",
		"@types/node": "^17.0.5",
		"@typescript-eslint/eslint-plugin": "^5.8.0",
		"@typescript-eslint/parser": "^5.8.0",
		"@vitejs/plugin-vue": "^2.0.1",
		"@vue/compiler-sfc": "^3.2.26",
		"@vue/eslint-config-prettier": "^7.0.0",
		"@vue/eslint-config-typescript": "^10.0.0",
		"autoprefixer": "^10.4.0",
		"eslint": "^8.5.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-vue": "^8.2.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.1.4",
		"postcss": "^8.4.5",
		"prettier": "^2.5.1",
		"stylelint": "^14.2.0",
		"stylelint-config-recommended": "^6.0.0",
		"stylelint-config-standard": "^24.0.0",
		"tailwindcss": "^3.0.7",
		"typescript": "^4.5.4",
		"vite": "^2.7.7",
		"vite-plugin-eslint": "^1.3.0",
		"vue-tsc": "^0.30.1"
	}
}
