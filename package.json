{
	"name": "vue3-scalable-architecture",
	"version": "1.0.0",
	"author": "raminjafary",
	"description": "vue3 scalable and modular architecture",
	"license": "MIT",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"dev": "vite",
		"build:prod": "cross-env NODE_ENV=production vue-tsc --noEmit && vite build",
		"build:stg": "cross-env NODE_ENV=development vite build",
		"serve": "vite preview",
		"lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
		"lint:fix": "yarn lint --fix",
		"format:check": "prettier --ignore-path .gitignore .",
		"format:fix": "prettier  --ignore-path .gitignore -u --write .",
		"lint:markup": "vue-tsc --noEmit",
		"lint:style": "stylelint --ignore-path .gitignore '**/*.{scss,css,vue}'",
		"lint:style:fix": "yarn lint:style --fix",
		"generate:changelog": "standard-version --skip.commit --skip.tag",
		"release": "standard-version && git push origin master --follow-tags",
		"merge": "node scripts/create-merge-request.js",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch"
	},
	"dependencies": {
		"axios": "^1.3.4",
		"vue": "^3.2.47",
		"vue-router": "^4.1.6",
		"vuex": "^4.1.0"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.20.2",
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"@types/jest": "^29.4.0",
		"@types/node": "^18.14.0",
		"@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
		"@vitejs/plugin-vue": "^4.0.0",
		"@vue/compiler-sfc": "^3.2.47",
		"@vue/eslint-config-prettier": "^7.1.0",
		"@vue/eslint-config-typescript": "^11.0.2",
		"@vue/test-utils": "^2.3.0",
		"autoprefixer": "^10.4.13",
		"babel-jest": "^29.4.3",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.3",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-vue": "^9.9.0",
		"husky": "^8.0.3",
		"jest": "^29.4.3",
		"lint-staged": "^13.1.2",
		"postcss": "^8.4.21",
		"postcss-html": "^1.5.0",
		"prettier": "^2.8.4",
		"standard-version": "^9.5.0",
		"stylelint": "^15.10.1",
		"stylelint-config-recommended": "^10.0.1",
		"stylelint-config-recommended-vue": "^1.4.0",
		"stylelint-config-standard": "^30.0.1",
		"tailwindcss": "^3.2.7",
		"ts-jest": "^29.0.5",
		"typescript": "^4.9.5",
		"vite": "^4.1.4",
		"vite-plugin-eslint": "^1.8.1",
		"vue-tsc": "^1.1.7",
		"vue3-jest": "^27.0.0-alpha.1"
	},
	"engines": {
		"node": ">=16.14.2"
	}
}
