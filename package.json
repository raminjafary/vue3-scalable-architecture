{
	"name": "vue3-scalable-architecture",
	"version": "1.0.0",
	"author": "raminjafary",
	"description": "vue3 scalable and modular architecture",
	"license": "MIT",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"dev": "vite",
		"build": "NODE_ENV=production vue-tsc --noEmit && vite build",
		"serve": "vite preview",
		"lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
		"lint:fix": "yarn lint --fix",
		"format:check": "prettier --ignore-path .gitignore .",
		"format:fix": "prettier  --ignore-path .gitignore -u --write .",
		"lint:markup": "vue-tsc --noEmit",
		"lint:style": "stylelint --ignore-path .gitignore '**/*.{scss,css,vue}'",
		"lint:style:fix": "yarn lint:style --fix",
		"generate:changelog": "standard-version --skip.commit --skip.tag",
		"release": "standard-version && git push origin master --follow-tags",
		"merge": "node scripts/create-merge-request.js"
	},
	"dependencies": {
		"axios": "^0.24.0",
		"vue": "^3.2.13",
		"vue-router": "^4.0.11",
		"vuex": "^4.0.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.2.1",
		"@commitlint/config-conventional": "^13.2.0",
		"@types/node": "^16.11.2",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vitejs/plugin-vue": "^1.9.3",
		"@vue/compiler-sfc": "^3.2.20",
		"@vue/eslint-config-prettier": "^6.0.0",
		"@vue/eslint-config-typescript": "^8.0.0",
		"autoprefixer": "^10.3.7",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-vue": "^7.20.0",
		"husky": "^7.0.4",
		"lint-staged": "^11.2.3",
		"postcss": "^8.3.11",
		"prettier": "^2.4.1",
		"stylelint": "^14.0.0",
		"stylelint-config-recommended": "^6.0.0",
		"stylelint-config-standard": "^23.0.0",
		"tailwindcss": "^2.2.17",
		"typescript": "^4.4.4",
		"vite": "^2.6.10",
		"vite-plugin-eslint": "^1.3.0",
		"vue-tsc": "^0.28.7"
	}
}
