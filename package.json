{
	"name": "vue3-scalable-architecture",
	"version": "1.0.0",
	"author": "raminjafary",
	"description": "vue3 scalable and modular architecture",
	"license": "MIT",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"dev": "vite",
		"build:prod": "cross-env NODE_ENV=production vue-tsc --noEmit && vite build",
		"build:stg": "cross-env NODE_ENV=development vite build",
		"serve": "vite preview",
		"lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
		"lint:fix": "yarn lint --fix",
		"format:check": "prettier --ignore-path .gitignore .",
		"format:fix": "prettier  --ignore-path .gitignore -u --write .",
		"lint:markup": "vue-tsc --noEmit",
		"lint:style": "stylelint --ignore-path .gitignore '**/*.{scss,css,vue}'",
		"lint:style:fix": "yarn lint:style --fix",
		"generate:changelog": "standard-version --skip.commit --skip.tag",
		"release": "standard-version && git push origin master --follow-tags",
		"merge": "node scripts/create-merge-request.js",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch"
	},
	"dependencies": {
		"axios": "^0.27.0",
		"vue": "^3.2.26",
		"vue-router": "^4.0.11",
		"vuex": "^4.0.2"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.15.8",
		"@commitlint/cli": "^16.0.1",
		"@commitlint/config-conventional": "^16.0.0",
		"@types/jest": "^28.0.0",
		"@types/node": "^17.0.8",
		"@typescript-eslint/eslint-plugin": "^5.9.0",
		"@typescript-eslint/parser": "^5.9.0",
		"@vitejs/plugin-vue": "^2.0.1",
		"@vue/compiler-sfc": "^3.2.26",
		"@vue/eslint-config-prettier": "^7.0.0",
		"@vue/eslint-config-typescript": "^10.0.0",
		"@vue/test-utils": "^2.0.0-rc.15",
		"autoprefixer": "^10.4.1",
		"babel-jest": "^28.0.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.6.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-vue": "^8.2.0",
		"husky": "^8.0.0",
		"jest": "^28.0.0",
		"lint-staged": "^12.1.5",
		"postcss": "^8.4.5",
		"postcss-html": "^1.3.0",
		"prettier": "^2.5.1",
		"standard-version": "^9.3.2",
		"stylelint": "^14.2.0",
		"stylelint-config-recommended": "^6.0.0",
		"stylelint-config-recommended-vue": "^1.1.0",
		"stylelint-config-standard": "^25.0.0",
		"tailwindcss": "^3.0.11",
		"ts-jest": "^28.0.0",
		"typescript": "^4.5.4",
		"vite": "^2.7.10",
		"vite-plugin-eslint": "^1.3.0",
		"vue-tsc": "^0.35.0",
		"vue3-jest": "^27.0.0-alpha.1"
	}
}
